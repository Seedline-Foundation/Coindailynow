{
  "name": "coindaily-backend",
  "version": "1.0.0",
  "description": "CoinDaily Platform Backend - Africa's Premier Cryptocurrency News Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=tests/api",
    "test:api:coverage": "jest --testPathPattern=tests/api --coverage",
    "test:security": "jest --testPathPattern=tests/api/security",
    "test:all": "jest --coverage",
    "perf:benchmark": "ts-node scripts/benchmark-api.ts",
    "perf:db-optimize": "ts-node scripts/optimize-database.ts",
    "perf:all": "npm run perf:benchmark && npm run perf:db-optimize",
    "security:test": "ts-node scripts/security-penetration-test.ts",
    "security:audit": "npm audit --json > security-audit.json && cat security-audit.json",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cryptocurrency",
    "news",
    "africa",
    "ai",
    "graphql",
    "typescript"
  ],
  "author": "CoinDaily Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@elastic/elasticsearch": "^8.10.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.0",
    "@prisma/client": "^6.16.3",
    "@types/axios": "^0.14.4",
    "@types/helmet": "^4.0.0",
    "@types/multer": "^2.0.0",
    "@types/sharp": "^0.32.0",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.2",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.1",
    "isomorphic-dompurify": "^2.28.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "openai": "^5.23.0",
    "otplib": "^12.0.1",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.19",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^6.16.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
