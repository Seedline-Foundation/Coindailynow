# Environment Variables for CoinDaily Africa Platform

# App Configuration
NEXT_PUBLIC_APP_NAME="CoinDaily Africa"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_GRAPHQL_URL="http://localhost:3001/graphql"
NEXT_PUBLIC_WS_URL="ws://localhost:3001/subscriptions"

# Authentication (for future implementation)
NEXTAUTH_SECRET="your-development-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Database URLs (for client-side display only, not actual connection)
NEXT_PUBLIC_DATABASE_STATUS_URL="/api/status/database"

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# African Market Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY="USD"
NEXT_PUBLIC_DEFAULT_EXCHANGE="binance"
NEXT_PUBLIC_SUPPORTED_LANGUAGES="en,sw,fr,pt,ar,ha,ig,yo,zu,af"
NEXT_PUBLIC_DEFAULT_TIMEZONE="Africa/Lagos"

# Performance Settings
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_API_TIMEOUT=5000
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Third-party Services (placeholder values)
NEXT_PUBLIC_ANALYTICS_ID=""
NEXT_PUBLIC_GTM_ID=""
NEXT_PUBLIC_SENTRY_DSN=""

# PWA Configuration
NEXT_PUBLIC_PWA_THEME_COLOR="#f97316"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#fafaf9"

# Development Tools
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_ENABLE_LOGGER=true