# Production Environment Variables for CoinDaily Africa Platform

# App Configuration
NEXT_PUBLIC_APP_NAME="CoinDaily Africa"
NEXT_PUBLIC_APP_URL="https://coindaily.africa"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_URL="https://api.coindaily.africa"
NEXT_PUBLIC_GRAPHQL_URL="https://api.coindaily.africa/graphql"
NEXT_PUBLIC_WS_URL="wss://api.coindaily.africa/subscriptions"

# Authentication
NEXTAUTH_SECRET="your-production-secret-key-here"
NEXTAUTH_URL="https://coindaily.africa"

# Database URLs (for client-side display only)
NEXT_PUBLIC_DATABASE_STATUS_URL="/api/status/database"

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# African Market Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY="USD"
NEXT_PUBLIC_DEFAULT_EXCHANGE="binance"
NEXT_PUBLIC_SUPPORTED_LANGUAGES="en,sw,fr,pt,ar,ha,ig,yo,zu,af"
NEXT_PUBLIC_DEFAULT_TIMEZONE="Africa/Lagos"

# Performance Settings
NEXT_PUBLIC_CACHE_TTL=600
NEXT_PUBLIC_API_TIMEOUT=8000
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Third-party Services
NEXT_PUBLIC_ANALYTICS_ID="GA-XXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io"

# PWA Configuration
NEXT_PUBLIC_PWA_THEME_COLOR="#f97316"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#fafaf9"

# Production Settings
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
NEXT_PUBLIC_ENABLE_LOGGER=false